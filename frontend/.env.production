# GamifyX AIOps Learning Platform - Production Environment Configuration

# API Configuration
REACT_APP_API_URL=/api
REACT_APP_WS_URL=wss://your-domain.com/ws
REACT_APP_ENVIRONMENT=production

# GamifyX Configuration
REACT_APP_GAMIFYX_ENABLED=true
REACT_APP_CYBERPUNK_THEME=true
REACT_APP_REAL_TIME_UPDATES=true

# Feature Flags
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANIMATIONS=true
REACT_APP_ENABLE_PARTICLES=true
REACT_APP_ENABLE_SOUND_EFFECTS=false
REACT_APP_ENABLE_3D_EFFECTS=true
REACT_APP_ENABLE_DARK_MODE=true

# Performance Configuration (Optimized for Production)
REACT_APP_UPDATE_INTERVAL=10000
REACT_APP_METRICS_REFRESH_RATE=30000
REACT_APP_LEADERBOARD_REFRESH_RATE=60000
REACT_APP_WEBSOCKET_RECONNECT_INTERVAL=10000
REACT_APP_API_TIMEOUT=15000

# Dashboard Configuration
REACT_APP_DEFAULT_DASHBOARD=gamifyx
REACT_APP_DASHBOARD_AUTO_REFRESH=true
REACT_APP_DASHBOARD_REFRESH_INTERVAL=60000
REACT_APP_MAX_CHART_DATA_POINTS=50

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=gamifyx_token
REACT_APP_SESSION_TIMEOUT=1800000
REACT_APP_AUTO_LOGOUT_WARNING=300000

# Monitoring & Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_TRACKING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Debug Configuration (Disabled for Production)
REACT_APP_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=error
REACT_APP_ENABLE_REDUX_DEVTOOLS=false

# Cyberpunk Theme Configuration
REACT_APP_PRIMARY_COLOR=#00FFFF
REACT_APP_SECONDARY_COLOR=#FF0080
REACT_APP_ACCENT_COLOR=#00FF88
REACT_APP_BACKGROUND_COLOR=#0A0A0F
REACT_APP_SURFACE_COLOR=#141423

# Animation Configuration (Optimized)
REACT_APP_ANIMATION_DURATION=200
REACT_APP_PARTICLE_COUNT=25
REACT_APP_ENABLE_SMOOTH_SCROLLING=true

# Notification Configuration
REACT_APP_NOTIFICATION_DURATION=4000
REACT_APP_MAX_NOTIFICATIONS=3
REACT_APP_ENABLE_BROWSER_NOTIFICATIONS=true

# Production Build Configuration
REACT_APP_ENABLE_HOT_RELOAD=false
REACT_APP_ENABLE_SOURCE_MAPS=false
GENERATE_SOURCEMAP=false

# Build Configuration
REACT_APP_BUILD_VERSION=2.0.0
REACT_APP_BUILD_DATE=2025-10-20